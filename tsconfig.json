{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": { "@/*": ["./src/*"] },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next.config.js",
    "postcss.config.ts",
    "tailwind.config.ts",
    "src/**/*",
    ".next/types/**/*.ts",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    "cypress/**/*.ts",
    "cypress.config.ts",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
